prof() {
  rm -f $1.prof*
  LD_PRELOAD=/usr/lib/libprofiler.so CPUPROFILE=$1.prof $1
}
pprint() {
  google-pprof --text $1 $1.prof > $1.prof.txt
  head -n 20 $1.prof.txt
  google-pprof --gif $1 $1.prof > $1.prof.gif
}
hprof() {
  rm -f $1.hprof*
  LD_PRELOAD=/usr/lib/libtcmalloc.so HEAPPROFILE=$1.hprof $1
}
hpprint() {
  if [ "$#" -eq 1 ]; then
    for f in $(ls $1.hprof.*.heap); do 
      google-pprof --text $1 $f > ${f%.*}.txt
      head -n 4 ${f%.*}.txt
      google-pprof --gif $1 $f > ${f%.*}.gif
    done
  elif [ "$#" -eq 2 ]; then
    f=$(ls -1 $1.hprof.*$2.heap | head -n 1)
    google-pprof --text $1 $f > ${f%.*}.txt
    head -n 5 ${f%.*}.txt
    google-pprof --gif $1 $f > ${f%.*}.gif
  fi
}

