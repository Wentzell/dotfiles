##################### EVNIRONMENT ####################

export VISUAL=vim

export CPLUS_INCLUDE_PATH=/usr/local/include:/usr/include/mpi:/usr/include:$CPLUS_INCLUDE_PATH
export LIBRARY_PATH=/usr/local/lib:/usr/lib:$LIBRARY_PATH
export LD_LIBRARY_PATH=/usr/local/lib:/usr/lib:$LD_LIBRARY_PATH
export PYTHONPATH=/home/nils/.usr/include:$PYTHONPATH

export PATH=/usr/local/bin:$HOME/bin:$PATH

#source /opt/intel/parallel_studio_xe_2015/psxevars.sh 
source /opt/intel/bin/iccvars.sh intel64 2> /dev/null
#source /opt/intel/vtune_amplifier_xe_2015/amplxe-vars.sh

##################### My aliases  ######################

	# General
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias make="make -j 4"
alias xkb='setxkbmap -option "ctrl:nocaps"'
alias fn='find -name'
alias tarf='tar -xvf'
alias resetX="export DISPLAY=:0.0"
alias rubber="rubber -m pdftex"
alias vpn='sudo vpnc --local-port 0'

	# ssh
alias ssh="TERM=xterm ssh"
alias sshx="TERM=xterm ssh -Y"
alias sshnokey="ssh -X -o PubkeyAuthentication=no"

	# vim
alias vimsrc="vim src/*cpp include/*.h"
alias vimtex='vim --servername $(basename *.tex.latexmain .tex.latexmain) *.tex content/*.tex settings/*.tex'

	# apt
alias apts="apt-cache search"
alias apti="sudo apt-get install"
alias aptr="sudo apt-get remove"

	# TMux
alias tmux="history -w;tmux"  # write history file when opening tmux, fix vim colors in tmux, 
alias tmux-share="tmux -S /var/tmux/pair_sock new -s shared"
alias tls='tmux list-sessions'
alias tat='tmux attach-session -t'
alias tkill='tmux kill-session -t'

2png () {
   convert -density 300 $1 -resize 1024x1024 $1.png
}
