\newcommand{\dss}{ %  Definition of Single Scale Prop Line
	\fmfcmd{%
		vardef cross_bar (expr p, len, ang) =
			((-len/2,0)--(len/2,0))
			rotated (ang + angle direction length(p)/2 of p)
			shifted point length(p)/2 of p
		enddef;
		style_def sscale expr p =	
			cdraw p;
			ccutdraw cross_bar (p, 3mm, 70)
		enddef;
	}
}
