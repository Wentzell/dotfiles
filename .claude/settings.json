{
  "cleanupPeriodDays": 90,
  "env": {
    "EDITOR": "vim",
    "PYTHONDONTWRITEBYTECODE": "1",
    "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
    "CMAKE_COLOR_DIAGNOSTICS": "ON"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Bash(cd:*)",
      "Bash(cmake:*)",
      "Bash(ctest:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ldd:*)",
      "Bash(ls:*)",
      "Bash(module:*)",
      "Bash(pprof:*)",
      "Bash(tree:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git check-attr:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue view:*)"
    ]
  },
  "enabledPlugins": {
    "clangd-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
